@model NFL.Models.Match

@{
    ViewData["Title"] = "Delete";
}

<h1>Törlés</h1>

<h3>Biztos törölni szeretnéd az alábbi mérkőzést?</h3>
<div>
    <h4>Mérkőzés</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeClubName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeClubName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwayClubName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwayClubName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeFinalScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeFinalScore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwayFinalScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwayFinalScore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeNumberOfTD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeNumberOfTD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwayNumberOfTD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwayNumberOfTD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Week)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Week)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-action="Index">Vissza a listához</a>
    </form>
</div>
