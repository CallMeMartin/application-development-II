@model IEnumerable<NFL.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Mérkőzések</h1>

<p>
    <a asp-action="Create">Új mérkőzés létrehozása</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HomeClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeFinalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayFinalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Week)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeFinalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayFinalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Week)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Szerkesztés</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Részletek</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
